<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.arthurgrangeiro.justmusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/your_songs"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayingNow"
            android:parentActivityName=".MainActivity"
            android:label="@string/playin_now_activity"/>
        <activity android:name=".SongDetails"
            android:label="@string/details_activity"/>
        <activity android:name=".Store"
            android:parentActivityName=".MainActivity"
            android:label="@string/store_activity"></activity>
    </application>

</manifest>