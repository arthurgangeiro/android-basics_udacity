<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_gray"
    android:orientation="vertical"
    tools:context="br.com.arthurgrangeiro.mybooklisting.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:layout_marginLeft="@dimen/search_bar_margin"
        android:layout_marginRight="@dimen/search_bar_margin"
        android:layout_marginTop="@dimen/search_bar_margin"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/search_icon"
            android:layout_height="@dimen/search_icon"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/search_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_linear_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_search_bar"
            android:textColor="@android:color/darker_gray"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top_size"
        android:background="@color/dark_backgroung"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
